CRIAR A TABELA PRODUTO

CREATE TABLE PRODUTO(
    CODPROD INT(3) PRIMARY KEY,
    NOMEPROD CHAR(40),
    DESCPROD CHAR(40),
    PRECOCOMPRA DECIMAL(5,2),
    PRECOVENDA DECIMAL(5,2),
    QTDDCOMPRADA INT(4),
    QTDDVENDIDA INT(4),
    QTDDDISPONIVEL INT(4))
    INDEX(PRECOVENDA))

CRIAR A TABELA FUNCION√ÅRIO

CREATE TABLE FUNCIONARIO(
    LOGIN VARCHAR(8) PRIMARY KEY,
    NOME CHAR(40),
    SENHA VARCHAR(8))

CRIAR A TABELA VENDA

CREATE TABLE VENDA(
    CODVENDA INT(5) PRIMARY KEY,
    DATAVENDA DATE,
    DESCONTO DECIMAL (4,2),
    TOTALVENDA DECIMAL (5,2),
    FORMAPAGAMENTO CHAR(40))

CRIAR A TABELA ITEM_VENDA

CREATE TABLE ITEM_VENDA(
    IDITEM INT(5) PRIMARY KEY,
    CODPROD INT(3),
    CODVENDA INT(5),
    QTDD INT(3),
    PRECO DECIMAL(5,2))
    PRECOVENDA DECIMAL(5,2),
    FOREIGN KEY (CODPROD) REFERENCES PRODUTO(CODPROD),
    FOREING KEY (CODVENDA) REFERENCES VENDA (CODVENDA),
    FOREIGN KEY (PRECOVENDA) REFERENCES PRODUTO (PRECOVENDA))
