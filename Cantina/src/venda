public void fazerVenda(int codprod, int quantidade){
    Venda venda = new Venda();
    Date dataAtual = new Date();
    String data = new SimpleDateFormat("dd/MM/yyyy").format(dataAtual);
    venda.setDataVenda(data);
    System.out.println("Insira um código para a venda: ");
    Scanner sc = new Scanner(System.in);
    int codvend = sc.nextInt();
    venda.setCodvenda(codvend);
    System.out.println("Qual a forma de pagamento?\n 1- cartão; 2- dinheiro")
    Scanner sc1 = new scanner(System.in);
    int formPag = sc1.nextInt();
    if (formPag == 1){
        venda.setFormaPagamento("Cartão");
    }else if(formaPag == 2){
        venda.setFormaPagamento("Dinheiro");
        venda.setDesconto(3.00);
    }
    VendaDAO vendaNova = new VendaDAO;
    vendaNova.iniciaVenda(venda);
    ItemVenda itemNovo = new itemVenda(codprod, quantidade);
    
    
   
}

public void iniciaVenda(Venda venda){
    
    String sql = "insert into venda(codvenda, datavenda, desconto, totalvenda, formapagamento, login)"+"values(?,?,?,?,?,?)";
    PreparedStatement stmt = conexao.prepareStatement(sql);
    stmt.setInt(1, venda.getCodvenda());
    stmt.setDate(2, venda.dataVenda());
    stmt.setDouble(3, venda.getDesconto());
    stmt.setDouble(4, venda.getTotalVenda());
    stmt.setString(5, venda.login());
    stmt.execute();
}
